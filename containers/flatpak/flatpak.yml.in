app-id: org.cockpit_project.cockpit_client
runtime: org.gnome.Platform
runtime-version: '41'
sdk: org.gnome.Sdk
command: cockpit-client
modules:
  - name: cockpit-client
    buildsystem: simple
    build-commands:
      - rm tools/mock-build-env/json-glib-1.0.pc
      - ./configure --disable-polkit --disable-ssh --disable-pcp --with-systemdunitdir=/invalid CPPFLAGS=-Itools/mock-build-env PKG_CONFIG_PATH=tools/mock-build-env --prefix=/app --with-admin-group=root --disable-doc
      - make install-for-flatpak -j$(nproc)

    sources:
      - type: archive
        path: @distdir@.tar.xz
finish-args:
  - --talk-name=org.freedesktop.Flatpak
  - --socket=wayland
  - --socket=fallback-x11
  - --device=dri
